@using Bloggable.Web.Infrastructure.Attributes
@model string

@{
    var placeholder = string.Empty;
    if (ViewData.ModelMetadata.AdditionalValues.ContainsKey(PlaceholderAttribute.AdditionalValueKey))
    {
        placeholder = ViewData.ModelMetadata.AdditionalValues[PlaceholderAttribute.AdditionalValueKey] as string;
    }

    var htmlAttributes = new
    {
        placeholder,
        @class = "form-control",
    };
}

@Html.TextBoxFor(m => m, htmlAttributes)