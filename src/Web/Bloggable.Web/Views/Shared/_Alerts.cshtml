@using Bloggable.Common.Extensions
@using Bloggable.Web.Infrastructure.Extensions

@{
    var alerts = TempData.GetAlerts();
}

@if (alerts.Any())
{
    <script>
        $(function() {
            @foreach (var alert in alerts)
            {
                <text>
                Bloggable.Alerts.showAlert({
                    alertClass: '@alert.Type.GetDescription()',
                    message: '@alert.Message.Replace("'", "\\'")'
                });
                </text>
            }
        });
    </script>
}
