@using Bloggable.Web.Areas.Administration.Controllers
@using Bloggable.Web.Models.Administration.Comments.ViewModels

@(Html.KendoGrid<CommentGridViewModel>(
    m => m.Id,
    read => read.Action("ReadComments", "Comments", new { postId = "#=Id#" }),
    null,
    null,
    destroy => destroy.Action<CommentsController>(c => c.Destroy(null, null)),
    "comments-grid-#=Id#",
    cols =>
    {
        cols.Bound(col => col.Content);
        cols.Bound(col => col.AuthorUserName);
        cols.Bound(col => col.IsDeleted);
        cols.Command(command => command.Destroy());
    }
)
.ToClientTemplate())